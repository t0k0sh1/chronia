{
  "name": "chronia",
  "version": "0.1.11",
  "type": "module",
  "description": "A modern, lightweight TypeScript date/time utility library with comprehensive formatting, parsing, and manipulation capabilities.",
  "license": "MIT",
  "author": "Takashi Yamashina <takashi.yamashina@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t0k0sh1/chronia.git"
  },
  "homepage": "https://t0k0sh1.github.io/chronia/",
  "bugs": {
    "url": "https://github.com/t0k0sh1/chronia/issues"
  },
  "keywords": [
    "chronia",
    "date",
    "time",
    "datetime",
    "utility",
    "utils",
    "typescript",
    "javascript"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "vitest tests/",
    "test:pbt": "vitest .kiro/specs/**/*.pbt.test.ts",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint ./src",
    "lint:docs": "markdownlint-cli2 docs/**/*.md README.md"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "date-fns": "^4.1.0",
    "eslint": "^9.35.0",
    "fast-check": "^4.3.0",
    "markdownlint": "^0.39.0",
    "markdownlint-cli2": "^0.19.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
