{
  "name": "chronia",
  "version": "0.1.5",
  "type": "module",
  "description": "Simple date/time utilities",
  "license": "MIT",
  "author": "Takashi Yamashina <takashi.yamashina@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t0k0sh1/chronia.git"
  },
  "homepage": "https://github.com/t0k0sh1/chronia#readme",
  "bugs": {
    "url": "https://github.com/t0k0sh1/chronia/issues"
  },
  "keywords": [
    "chronia",
    "date",
    "time",
    "datetime",
    "utility",
    "utils",
    "typescript",
    "javascript"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
